{
  "name": "Solace Queue Message Viewer",
  "description": "View the content of messages on a queue directly in the Solace Event Broker UI.",
  "version": "2.4.2",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "wss://*.messaging.solace.cloud:443/*",
    "ws://*.local/*",
    "wss://*.local/*",
    "ws://localhost/*",
    "wss://localhost/*"
  ],
  "optional_host_permissions": [
    "ws://*/*",
    "wss://*/*"
  ],
  "background": {
    "service_worker": "worker_wrapper.js",
    "type": "module"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.messaging.solace.cloud:943/*",
        "http://*.local/*",
        "https://*.local/*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "js": [
        "src/inject/inject.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "src/img/solace-favicon-bigdot.png"
  },
  "action": {
    "default_icon": {
      "16": "src/img/solace-favicon-bigdot.png"
    },
    "default_title": "Open Options"
  }
}